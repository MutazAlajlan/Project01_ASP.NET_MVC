@{
	var books = (List<BookModel>)ViewData["Books"];
}


<div class="container">
 <div class="row">
		@foreach (var book in books)
		{
		<div class="col">
		<div class="card" style="width: 18rem;  margin-top: 20px; margin-bottom: 20px; 
	margin-right: 20px; margin-left: 20px;">
<div class="card-header">	
<h5 class="card-title" style="text-align:center; margin-top: 3%; margin-bottom: 3%">@book.bookName</h5>
</div>
	 <img src="@book.image" class="card-img-top" alt="book cover">
	 <div class="card-body">
	  <h5 class="card-title" style="text-align:center">By: @book.authorName</h5>
	  <p class="card-text"style="text-align:center">Published by: @book.publisher in the Year of @book.releaseYear</p>
	  <p class="card-text">$@book.price</p>
	  <a href="/Books/Details?id=@book.id" class="btn btn-success">Check the book</a>
	 </div>
	 </div>
	 </div>
		}
</div>
</div>